@model IList<User>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Carers</li>
    </ol>
</nav>
      @* @if (User.IsInRole(Role.manager.ToString())) *@
<div class="card border rounded shadow p-4">

       <div class="d-flex align-items-center justify-content-between">
        <h3>Carer List</h3>
     <a asp-roles="manager" asp-action="Create" class="btn btn-primary btn-sm">
            <i class="bi bi-bag-plus-fill me-2" title="Add Carer"></i>
            <span>Add Carer</span>
        </a>
   </div>

    <table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th> 
            <th>Title</th> 
            <th>Firstname</th> 
            <th>Surname</th>
            <th>DOB</th>
            <th>National Insurance No</th> 
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var c in Model) {
            <tr>
                <td>@c.Id</td> 
                <td>@c.Title</td>
                <td>@c.Firstname</td> 
                <td>@c.Surname</td>
                 <td>@c.DOB.ToShortDateString()</td>
                 <td>@c.NationalInsuranceNo</td>
                <td class="d-flex gap-1">
                    <a asp-action="Details" asp-route-id="@c.Id">
                        <i class="bi bi-info-circle" title="View Carer"></i>
                    </a>
                             <a asp-roles="manager,admin" asp-action="Edit" asp-route-id="@c.Id">
                            <i class="bi bi-pencil"  title="Edit Carer"></i>
                        </a> 
                    
                        <a asp-roles="manager,admin" asp-action="Delete" asp-route-id=@c.Id>
                            <i class="by bi-trash"title="Delete Carer"></i>
                        </a> 
        
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

