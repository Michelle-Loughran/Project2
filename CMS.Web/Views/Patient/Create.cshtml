@model Patient

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="Patient"
                                       asp-action="Index">Patients</a></li>
        <li class="breadcrumb-item active" aria-current="page">Add Patient
            Details</li>
    </ol>
</nav>

<div class="card rounded shadow mt-4 p-4">
    
    <h3>Add Patient</h3>

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- Title Firstname Surname -->
        <div class="row mt-3">
            <!-- Title -->
            <div class="col">
                <label asp-for="Title" class="form-label"></label>
                <select id="title" name="title" class="form-control">
                    <option value="Mr">Mr.</option>
                    <option value="Mrs">Mrs.</option>
                    <option value="Miss">Miss.</option>
                    <option value="Ms">Ms.</option>
                    <option value="Dr.">Dr.</option>
                </select>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

          <!-- Firstname -->
            <div class="col-5">
                <label asp-for="Firstname" class="form-label"></label>
                <input asp-for="Firstname" class="form-control" />
                <span asp-validation-for="Firstname" class="text-danger"></span>
            </div>
            <!-- Surname -->
            <div class="col-6">
                <label asp-for="Surname" class="form-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
        </div>

        <!-- NationalInsuranceNo / DOB -->
        <div class="row mt-3">
            <div class="col">
                <label asp-for="NationalInsuranceNo" class="form-label"></label>
                <input asp-for="NationalInsuranceNo" class="form-control" />
                <span asp-validation-for="NationalInsuranceNo" class="text-danger"></span>
            </div>
            <!-- DOB -->
            <div class="col">
                <label asp-for="DOB" class="form-label"></label>
                <input asp-for="DOB" class="form-control" />
             
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>
        </div>

        <!-- Street -->
        <div class="row mt-3">
            <div class="col">
                <label asp-for="Street" class="form-label"></label>
                <input asp-for="Street" class="form-control" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
            <!-- Town -->
            <div class="col">
                <label asp-for="Town" class="form-label"></label>
                <input asp-for="Town" class="form-control" />
                <span asp-validation-for="Town" class="text-danger"></span>
            </div>
        </div>

        <!-- County / Postcode-->
        <div class="row mt-3">
            <div class="col">
                <label asp-for="County" class="form-label"></label>
                <input asp-for="County" class="form-control" />
                <span asp-validation-for="County" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="Postcode" class="form-label"></label>
                <input asp-for="Postcode" class="form-control" />
                <span asp-validation-for="Postcode" class="text-danger"></span>
            </div>
        </div>

        <!-- MobileNumber / HomeNumber -->
        <div class="row mt-3">
            <div class="col">
                <label asp-for="MobileNumber" class="form-label"></label>
                <input asp-for="MobileNumber" class="form-control" />
                <span asp-validation-for="MobileNumber" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="HomeNumber" class="form-label"></label>
                <input asp-for="HomeNumber" class="form-control" />
                <span asp-validation-for="HomeNumber" class="text-danger"></span>
            </div>
        </div>

        <!-- email / photo -->
        <div class="row mt-3">
            <div class="col">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
            <div class="col">
                <label asp-for="PhotoUrl" class="form-label"></label>
                <input asp-for="PhotoUrl" class="form-control" />
                <span asp-validation-for="PhotoUrl" class="text-danger"></span>
            </div>
        </div>

        <!-- GP / SocialWorker -->
        <div class="row mt-3">
            <div class="col">
                <label asp-for="GP" class="form-label"></label>
                <input asp-for="GP" class="form-control" />
                <span asp-validation-for="GP" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="SocialWorker" class="form-label"></label>
                <input asp-for="SocialWorker" class="form-control" />
                <span asp-validation-for="SocialWorker" class="text-danger"></span>
            </div>
        </div>

        <!-- CarePlan -->
         <div class="mt-3">
             <label asp-for="CarePlan" class="form-label"></label>
             <textarea asp-for="CarePlan" rows="5" class="form-control"></textarea>
             <span asp-validation-for="CarePlan" class="text-danger"></span>
         </div>
         
        <!-- submit button and cancel link which navigates to Index action -->       
        <div class="mt-3">
            <button type="submit" class="btn btn-primary" aria-label="save">Create</button>
            <a class="btn btn-secondary" asp-action="Index" aria-label="cancel">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
