@model PatientCareEvent

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="PatientCareEvent" asp-action="Index">PatientCareEvent</a></li>
        <li class="breadcrumb-item active" aria-current="page">Add Care-Event Details</li>
    </ol>
</nav>
<div class="card rounded shadow p-4">
   
   <div class="d-flex justify-content-between mb-3">
        <h3>@Model.Patient.Name <span>Care Event</span></h3>
   </div>

    <h5>Care Plan</h5>
    <div>
        @Model.CarePlan
    </div>

    <h5 class="mt-3">Visit Details</h5>
    
    <form asp-action="Schedule" asp-route-id="@Model.Id">
        
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input asp-for="Id" type="hidden" />
        <input asp-for="PatientId" type="hidden" />     
             
         <div class="row mt-3">
            <div class="col">
                 <label asp-for="UserId" class="form-label"></label>
                <select asp-for="UserId" class="form-control" asp-items=@ViewBag.Carers>

                </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="col">
                 <label asp-for="DateTimeOfEvent" class="form-label"></label>
                <input asp-for="DateTimeOfEvent" class="form-control" ></input>
                <span asp-validation-for="DateTimeOfEvent" class="text-danger"></span>
            </div>
            <div class="col">
                 <label asp-for="ScheduledDuration" class="form-label"></label>
                <input asp-for="ScheduledDuration" class="form-control" ></input>
                <span asp-validation-for="ScheduledDuration" class="text-danger"></span>
            </div>
        </div>


        <div class="mt-3">
            <button type="submit" class="btn btn-primary" aria-label="save">Save</button>
            <a class="btn btn-secondary" asp-controller="Patient" asp-action="Details" asp-route-Id="@Model.PatientId" aria-label="cancel">Cancel</a>
        </div>

    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

