@model IList<PatientCareEvent>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">PatientCareEvens</li>
    </ol>
</nav>
    
<div class="card border rounded shadow mt-4 p-4">
    <div class="d-flex align-items-center justify-content-between">
         <h3>Scheduled Care Appointment List</h3>
        @* <a asp-roles="manager" asp-action="Schedule" class="btn btn-primary btn-sm">
            <i class="bi bi-bag-plus-fill me-2" title="Schedule Care Event"></i>
            <span>Schedule Care Event</span>
        </a> *@
    </div>
  
    <table class="table table-striped">
    <thead>
        <tr>
            <th>#</th> 
            <th>Date</th> 
            <th>Time</th>
            <th>Carer Name</th> 
            <th>Patient Name</th>
            <th>Actions</th>
        </tr>
    </thead>
          <tbody>
            @foreach(var a in Model) 
            {
            <tr>
                <td>@a.Id</td>
                <td>@a.DateTimeOfEvent.ToShortDateString()</td>
                <td>@a.DateTimeOfEvent.ToShortTimeString()</td>              
                <td>@a.User.Name </td>
                <td>@a.Patient.Name</td> 

                <td class="d-flex gap-1">      
                        <a asp-controller="Patient" asp-action="Details" asp-route-id="@a.PatientId">
                            <i class="bi bi-info-circle" title="View Patient"></i>
                        </a> 
             
                        <a asp-roles="manager" asp-action="Edit" asp-route-id="@a.Id">
                            <i class="bi bi-pencil" title="Edit Appointment"></i>
                        </a>
                        <a asp-roles="manager" asp-action="Delete" asp-route-id=@a.Id>
                            <i class="by bi-trash" title="Delete Appointment"></i>
                        </a>
                    </td>
            </tr>
        }
    </tbody>
</table>
</div>

