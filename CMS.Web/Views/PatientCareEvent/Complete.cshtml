@model PatientCareEvent

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="PatientCareEvent" asp-action="Index">PatientCareEvent</a></li>
        <li class="breadcrumb-item active" aria-current="page">Add Care-Event Details</li>
    </ol>
</nav>
<div class="card rounded shadow p-4">
   
   <div class="d-flex justify-content-between mb-3">
        <h3><span>Care Event For: </span>@Model.Patient.Name</h3>
        <h3>Carer: @Model.User.Name</h3>
   </div>

    <form asp-action="Complete" asp-route-id="@Model.Id">
        
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input asp-for="PatientId" type="hidden" />
        <input asp-for="UserId" type="hidden" />

        <div class="row mt-3">
            <div class=""> 
                <label asp-for="CarePlan" class="form-label"></label>
                <textarea readonly rows="6" asp-for="CarePlan" class="form-control" ></textarea>
            </div>
        </div>

        <div class="mt-3">
            <label asp-for="DateTimeOfEvent" class="form-label"></label>
            <input readonly asp-for="DateTimeOfEvent" class="form-control" ></input>           
        </div>
        
        <div class="mt-3">
            <label asp-for="DateTimeCompleted" class="form-label"></label>
            <input asp-for="DateTimeCompleted" class="form-control" ></input>
            <span asp-validation-for="DateTimeCompleted" class="text-danger"></span>
        </div>

        <div class="row mt-3">
            <div class=""> 
                <label asp-for="Issues" class="form-label"></label>
                <textarea rows="6" asp-for="Issues" class="form-control" ></textarea>
                <span asp-validation-for="Issues" class="text-danger"></span>
            </div>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary" aria-label="save">Save</button>
            <a class="btn btn-secondary" asp-controller="Patient" asp-action="Details" asp-route-Id="@Model.PatientId" aria-label="cancel">Cancel</a>
        </div>

    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

