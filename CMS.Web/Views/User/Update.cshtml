@model ProfileViewModel

<div class="card shadow p-4 mt-5 mx-auto w-75">
  
    <div class="position-absolute top-0 start-50 translate-middle rounded-circle bg-dark p-2">
        <svg class="text-white" width="28" height="28" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
          <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3Zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z"/>
        </svg>
    </div>
    
    <h3 class="my-3 mx-auto">Update User Account!</h3>

    <form asp-action="Update" method="post">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input asp-for="Id" type="hidden" />

        <!-- title firstname surname 3 columns in a row -->
        <div class="row mt-3">
            <div class="col">
                <label asp-for="Title" class="form-label"></label>
                <select id="title" name="title" class="form-control">
                    <option value="Mr">Mr.</option>
                    <option value="Mrs">Mrs.</option>
                    <option value="Miss">Miss.</option>
                    <option value="Ms">Ms.</option>
                    <option value="Dr.">Dr.</option>
                </select>
            </div>
            <div class="col-4">
                <label asp-for="Firstname" class="form-label"></label>
                <input asp-for="Firstname" class="form-control" />
                <span asp-validation-for="Firstname" class="text-danger"></span>
            </div>
            <div class="col-6">
                <label asp-for="Surname" class="form-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>        
        </div>

        <!-- DOB/ Email -->
        <div class="row mt-3">
             <div class="col">
                <label asp-for="DOB" class="form-label"></label>
                <input asp-for="DOB" class="form-control" />
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>
            <!-- EmailAddress-->
            <div class="col">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <!-- Street/town -->
        <div class="row mt-3">
            <div class="col">
                <label asp-for="Street" class="form-label"></label>
                <input asp-for="Street" class="form-control" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
          
            <div class="col">
                <label asp-for="Town" class="form-label"></label>
                <input asp-for="Town" class="form-control" />
                <span asp-validation-for="Town" class="text-danger"></span>
            </div>
        </div>

        <!-- County/ Postcode --> 
        <div class="row mt-3">
            <div class="col">
                <label asp-for="County" class="form-label"></label>
                <input asp-for="County" class="form-control" />
                <span asp-validation-for="County" class="text-danger"></span>
            </div>
           
            <div class="col">
                <label asp-for="Postcode" class="form-label"></label>
                <input asp-for="Postcode" class="form-control" />
                <span asp-validation-for="Postcode" class="text-danger"></span>
            </div>
        </div>

        <!-- MobileNumber / HomeNumber -->
        <div class="row mt-3">     
            <div class="col">
                <label asp-for="MobileNumber" class="form-label"></label>
                <input asp-for="MobileNumber" class="form-control" />
                <span asp-validation-for="MobileNumber" class="text-danger"></span>
            </div>
          
            <div class="col">
                <label asp-for="HomeNumber" class="form-label"></label>
                <input asp-for="HomeNumber" class="form-control" />
                <span asp-validation-for="HomeNumber" class="text-danger"></span>
            </div>
        </div>

        <!-- photurl -->      
        <div class="row">
            <div class="form-group mt-3">
                <label asp-for="PhotoUrl" class="form-label"></label>
                <input asp-for="PhotoUrl" class="form-control" />
                <span asp-validation-for="PhotoUrl" class="text-danger"></span>
            </div>
        </div>
                <!-- photurl -->      
        <div class="row">
            <div class="form-group mt-3">
                <label asp-for="Role" class="form-label"></label>
                <input asp-for="Role" class="form-control" />
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
        </div>
       

        <div class="mt-3">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a class="btn btn-secondary" asp-controller="User" asp-action="Index">Cancel</a>
        </div>

    </form>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
